<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="3dp"
    android:background="@drawable/device_cube_background"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_alias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_weight="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            tools:text="位号" />
        <TextView
            android:id="@+id/textSymbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textSize="12sp"
            android:text="单位"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/text_name"
        android:layout_below="@id/llTitle"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="50"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/back_fort"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="名称" />

        <LinearLayout
            android:id="@+id/llayoutSrc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textSrcSignal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信号源"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textSimulator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="10sp" />
        </LinearLayout>

</RelativeLayout>